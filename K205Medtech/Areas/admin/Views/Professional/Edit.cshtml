@model EditVM


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<form method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-lg-8">
            <div class="card p-3">
                <div class="tab-content" id="myTabContent">

                    <p>Name</p>
                    <input class="form-control mb-2" name="Name" value="@Model.Professional.Name" />
                    <p>Profession</p>
                    <input class="form-control mb-2" name="Profession" value="@Model.Professional.Profession" />
                    <p>Description</p>
                    <textarea id="editor-1" class="form-control mb-2" name="Description" >@Model.Professional.Description</textarea>
                    <p>Facebook Link</p>
                    <input class="form-control mb-2" name="Facebook" value="@Model.Professional.Facebook" />
                    <p>Twitter Link</p>
                    <input class="form-control mb-2" name="Twitter" value="@Model.Professional.Twitter" />
                    <p>LinkedIn Link</p>
                    <input class="form-control mb-2" name="LinkedIn" value="@Model.Professional.LinkedIn" />
                    <p>Pinterest Link</p>
                    <input class="form-control mb-2" name="Pinterest" value="@Model.Professional.Pinterest" />
                    <p>Email</p>
                    <input class="form-control mb-2" name="Email" value="@Model.Professional.Email" />
                    <p>Phone</p>
                    <input class="form-control mb-2" name="Phone" value="@Model.Professional.Phone" />
                </div>
            </div>

        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <p>Photo</p>
                    <img class="img-fluid" src="@Model.Professional.PhotoURL" />
                    <input type="hidden" value="@Model.Professional.PhotoURL" name="OldPhoto" type="@Model.Professional.PhotoURL" />
                </div>
            </div>
            <div class="card p-3 mt-3">
                <input type="file" name="Image" />
            </div>
            <div class="card p-3 mt-3">
                <input class="btn btn-primary btn-sm" type="submit" value="Save" />
            </div>
            <div class="card p-3 mt-3">
                <a class="btn btn-primary btn-sm" href="/admin/professional">Back to List</a>
            </div>

        </div>


    </div>



</form>


<script>
    ClassicEditor
            .create( document.querySelector('#editor-1') )
</script>


