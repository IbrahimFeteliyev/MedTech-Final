
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <form method="post">

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        
                        <p>Name</p>
                        <input class="form-control mb-2" name="Name" />
                        <p>Profession</p>
                        <input class="form-control mb-2" name="Profession" />
                        <p>Description</p>
                        <textarea id="editor-1" class="form-control mb-2" name="Description"></textarea>
                        <p>Facebook</p>
                        <input class="form-control mb-2" name="Facebook" />
                        <p>Twitter</p>
                        <input class="form-control mb-2" name="Twitter" />
                        <p>LinkedIn</p>
                        <input class="form-control mb-2" name="LinkedIn" />
                        <p>Pinterest</p>
                        <input class="form-control mb-2" name="Pinterest" />
                        <p>Email</p>
                        <input class="form-control mb-2" name="Email" />
                        <p>Phone</p>
                        <input class="form-control mb-2" name="Phone" />
                        <p>PhotoURL</p>
                        <input class="form-control mb-2" name="PhotoURL" />
                    </div>

                </div>

                <script>
                    ClassicEditor
                            .create( document.querySelector('#editor-1') )
                </script>
                <div class="card p-3 mt-3">
                <input class="btn btn-primary btn-sm" type="submit" value="Create" />
                </div>
                <div class="card p-3 mt-3">
                <a class="btn btn-primary btn-sm" href="/admin/professional">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
