@model EditVM


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<form method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-lg-8">
            <div class="card p-3">
                <div class="tab-content" id="myTabContent">
                    <p>Title</p>
                    <input class="form-control mb-2" name="Title" value="@Model.QualitySystem.Title" />
                    <p>Description</p>
                    <textarea id="editor-1" class="form-control mb-2" name="Description">@Model.QualitySystem.Description</textarea>
                    <p>Service</p>
                    <textarea id="editor-2" class="form-control mb-2" name="Service">@Model.QualitySystem.Service</textarea>
                </div>
            </div>

        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <p>Photo</p>
                    <img class="img-fluid" src="@Model.QualitySystem.PhotoURL" />
                    <input type="hidden" value="@Model.QualitySystem.PhotoURL" name="OldPhoto" type="@Model.QualitySystem.PhotoURL" />
                </div>
            </div>
            <div class="card p-3 mt-3">
                <input type="file" name="Image" />
            </div>
            <div class="card p-3 mt-3">
                <input class="btn btn-primary btn-sm" type="submit" value="Save" />
            </div>
            <div class="card p-3 mt-3">
                <a class="btn btn-primary btn-sm" href="/admin/qualitysystem">Back to List</a>
            </div>

        </div>
    </div>



</form>


<script>
    ClassicEditor
            .create( document.querySelector('#editor-1') )
    ClassicEditor
            .create( document.querySelector('#editor-2') )
</script>


